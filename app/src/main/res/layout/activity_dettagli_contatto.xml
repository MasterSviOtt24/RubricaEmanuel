<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".DettagliContatto">

    <TextView
        android:textStyle="bold"
        android:textSize="34dp"
        android:id="@+id/titolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Nome e Cognome" />

    <LinearLayout
        android:id="@+id/linea1"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titolo"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <TextView
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Numero: "
            />
        <TextView
            android:id="@+id/textNumero"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3405673493"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linea2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@id/linea1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        >
        <ImageView
            android:id="@+id/chiama"
            android:src="@drawable/telephone"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/messaggia"
            android:src="@drawable/message"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <Button
        android:id="@+id/modifica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Modifica"
        android:background="@drawable/btn_cerchio" />

</androidx.constraintlayout.widget.ConstraintLayout>